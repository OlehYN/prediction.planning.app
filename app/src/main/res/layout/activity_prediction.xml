<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="work.course.planning.prediction.com.planningapp.activity.PredictionActivity">

    <Button
        android:id="@+id/backToModelFromPredict"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back to model" />

    <LinearLayout
        android:id="@+id/createPredictActivity"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/featuresSpinnerPredict"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5" />

        <Button
            android:id="@+id/addFeatureInputPredict"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add feature" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/createPredictButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Predict" />
    </LinearLayout>
</LinearLayout>
